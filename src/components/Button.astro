---
import { HTMLAttributes } from "astro/types"

interface Props extends HTMLAttributes<"button"> {
	class?: string
	label?: string
	target?: string
	href?: string
}

const {
	label,
	target = "_self",
	href,
	class: className,
	...props
} = Astro.props

const Tag = href ? "a" : "button"
---

<Tag
	class:list={["c-button", className]}
	target={target}
	href={href}
	{...props}
>
	{label}
</Tag>
