---
import "../styles/index.scss"

import { Footer, Header } from "@blocks/body/index"
import { Container, MobileMenu } from "@components/index"

interface Props {
	title: string
	description: string
	class: string
}

const { title, description, class: className, ...props } = Astro.props
---

<html lang="en">
	<head>
		<title>{title} | Astro boilerplate</title>

		<meta charset="utf-8" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<meta name="viewport" content="width=device-width" />
		<meta name="robots" content="index" />
		<meta name="language" content="en" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<script src="@scripts/index"></script>
	</head>
	<body class:list={["base-layout scheme-default", className]} {...props}>
		<Container>
			<Header />
		</Container>

		<MobileMenu class="scheme-accent-alt" />

		<main>
			<slot />
		</main>

		<Container class="c-container--full">
			<Footer />
		</Container>
	</body>
</html>

<style is:global lang="scss">
	.base-layout {
		display: flex;
		flex-direction: column;

		main {
			min-height: 100vh;
		}
	}
</style>
