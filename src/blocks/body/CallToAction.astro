---
import { Text, Title, Button } from "@components/index"

interface Props {
	class?: string
	title?: {
		text: string
	}
	text?: string
	button?: {
		label: string
		href: string
	}
	list?: string[]
}

const { class: className, title, text, button, list } = Astro.props
---

<section class:list={["call-to-action", className]}>
	<div class="call-to-action__card scheme-accent">
		<div class="call-to-action__card-left">
			<Title Tag="h2" text={title.text} />

			<Button
				class="c-button--tertiary scheme-default"
				href={button.href}
				label={button.label}
			/>
		</div>

		<div class="call-to-action__card-right">
			<Text class="c-text--subtle typo-body-large" text={text} />

			{
				list && (
					<ol class="call-to-action__list">
						{list.map((item) => (
							<li class="call-to-action__list-item typo-body-large">
								{item}
							</li>
						))}
					</ol>
				)
			}
		</div>
	</div>
</section>
